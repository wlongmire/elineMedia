package code {	import flash.display.MovieClip;		import flash.events.MouseEvent;	import flash.events.Event;		import flash.display.StageScaleMode;	import flash.display.StageAlign;		import com.longmireDesign.structure.GameManager;		import code.controllers.states.SetupState;		import code.views.screens.BackgroundScreen;	import code.views.screens.GameInfoScreen;	import code.views.screens.RoomImgScreen;	import code.views.screens.CareerListScreen;		public class StemIsEverywhere extends MovieClip{		var _gm:GameManager;				public function StemIsEverywhere() {			_gm = GameManager.getInstance();			_gm.gameObjects["stage"] = this;			_gm.gameObjects["root"] = this;						_gm.gameObjects["defaultwidth"] = this.width;			_gm.gameObjects["defaultheight"] = this.height;			_gm.gameObjects["minwidth"] = 1000;			_gm.gameObjects["minheight"] = 598;						//stage.scaleMode = StageScaleMode.NO_SCALE;			//stage.align = StageAlign.TOP_LEFT;			start();		}				public function start() {			_gm.start(SetupState.getInstance());						_gm.gameObjects["stage"].addEventListener(Event.RESIZE, resizeHandler);		}				public function reset() {			_gm.start(SetupState.getInstance());					}				public function resize() {			//BackgroundScreen.getInstance().resizeHandler();			//GameInfoScreen.getInstance().resizeHandler();			//RoomImgScreen.getInstance().resizeHandler();			//CareerListScreen.getInstance().resizeHandler();		}				//	Handle clicking of the full-screen button		private function onFullScreenButtonClick(e:MouseEvent):void	{						toggleFullScreen();		}				public function resizeHandler(e:Event) {					}				//	Toggle fullscreen on and off		private function toggleFullScreen():void	{						//if normal size, go to fullscreen, else go to normal size			if(stage["displayState"]=="normal")				stage["displayState"]="fullScreen";			else				stage["displayState"]="normal";					}	}}